<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.InsertArticleActivity">
<TextView
    android:id="@+id/titre_modify"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Ajouter un article"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    />

    <EditText
    android:id="@+id/et_name_article"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/titre_modify"
    android:hint="Nom de l'article"
    android:layout_marginTop="50dp"
    />

    <EditText
        android:id="@+id/et_descriptionM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/et_name_article"
        android:hint="Description de l'article"
        android:layout_marginTop="50dp"
        />
    <EditText
        android:id="@+id/et_price_articleM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/et_descriptionM"
        android:hint="2.5"
        android:layout_marginTop="50dp"
        android:inputType="numberDecimal"
        />
    <EditText
        android:id="@+id/et_link_articleM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/et_price_articleM"
        android:hint="www."
        android:layout_marginTop="50dp"

        />
    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enregistrer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="onClickSave"
        />






</androidx.constraintlayout.widget.ConstraintLayout>