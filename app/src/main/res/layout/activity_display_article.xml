<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DisplayArticle">

    <TextView
        android:id="@+id/tv_nameD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="f"
        android:layout_marginTop="50dp"
        android:textAlignment="center"

        />
    <TextView
        android:id="@+id/tv_priceD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_nameD"
        app:layout_constraintLeft_toLeftOf="@id/tv_nameD"
        android:text="f"
        android:layout_marginTop="50dp"

        />
    <TextView
        android:id="@+id/tv_descriptionD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_priceD"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="f"
        android:layout_marginTop="50dp"

        />
    <RatingBar
        android:id="@+id/tv_ratingD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_nameD"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        android:isIndicator="true"
        android:numStars="5"
        style="@style/Widget.AppCompat.RatingBar.Small"

        />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_descriptionD"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Supprimer"
            android:layout_marginTop="50dp"
            android:onClick="onClickDelete"

            />

    <Button
        android:id="@+id/btn_modify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_delete"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Modifier"
        android:layout_marginTop="50dp"
        android:onClick="onClickModify"

        />
    <Button
        android:id="@+id/btn_return"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retour"
        app:layout_constraintTop_toBottomOf="@id/btn_modify"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"
        android:onClick="onClickReturnList"
        />



</androidx.constraintlayout.widget.ConstraintLayout>